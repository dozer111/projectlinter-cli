; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true

[**.md]
max_line_length = 80

[/{config, src}/**.{yml, yaml}]
indent_style = space
indent_size = 2

[werf.yaml]
indent_style = space
indent_size = 2

[composer.json]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4
